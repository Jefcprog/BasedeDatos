@model BasedeDatos.DTOs.ProvinciaDto

<h2>Eliminar Provincia</h2>

<h3>¿Estás seguro que deseas eliminar esta provincia?</h3>
<div>
    <h4>Provincia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Provincia</dd>
        <dt class="col-sm-2">Región</dt>
        <dd class="col-sm-10">@Model.Region</dd> <!-- Se asume que 'RegionNombre' es una propiedad del DTO con el nombre de la región -->
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id_Provincia" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista</a>
</form>
