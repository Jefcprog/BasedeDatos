@model BasedeDatos.DTOs.ProvinciaDto

<h2>Crear Nueva Provincia</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Provincia" class="control-label"></label>
        <input asp-for="Provincia" class="form-control" />
        <span asp-validation-for="Provincia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Region" class="control-label"></label>
        <select asp-for="Region" class="form-control">
            <option value="">Selecciona una región</option>
            <!-- Opciones de regiones; se pueden obtener dinámicamente desde el backend -->
            <option value="1">Costa</option>
            <option value="2">Sierra</option>
            <option value="3">Oriente</option>
            <option value="4">Insular</option>
            <option value="5">Zonas No Delimitadas</option>
        </select>
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
